# ULY Environment Variables
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# INTEGRATIONS
# ============================================

# Google Workspace (for Gmail, Calendar, Drive)
# Get these from Google Cloud Console or ask your admin
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Atlassian (for Jira, Confluence)
# Uses browser auth, no keys needed here

# ============================================
# API KEYS (for future integrations)
# ============================================

# Notion
NOTION_API_KEY=

# Linear
LINEAR_API_KEY=

# Slack
SLACK_BOT_TOKEN=

# OpenAI (if using for specific skills)
OPENAI_API_KEY=

# ============================================
# CLOUDFLARE TUNNEL / N8N
# ============================================

# Nom du tunnel Cloudflare
CLOUDFLARE_TUNNEL_NAME=

# Token d'authentification pour l'API ULY
ULY_API_TOKEN=

# Hostname N8N pour l'enregistrement automatique (optionnel)
# Ex: n8n.mondomaine.com
N8N_HOSTNAME=

# Nom de l'utilisateur pour l'enregistrement N8N
ULY_USER_NAME=

# ============================================
# CUSTOM
# ============================================

# Add your own keys here as needed
# MY_SERVICE_API_KEY=
